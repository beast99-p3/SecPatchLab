{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug CLI Scan",
      "type": "python",
      "request": "launch",
      "module": "secpatchlab.cli",
      "args": ["scan", "--top", "10"],
      "console": "integratedTerminal"
    },
    {
      "name": "Debug Backend (uvicorn)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["backend.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"],
      "console": "integratedTerminal"
    }
  ]
}
